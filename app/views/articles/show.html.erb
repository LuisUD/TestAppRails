
  <h1 class="text-center mt-4"> <%= @article.title %></h1>
  <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow p-3 mb-5 bg-white rounded">
            <div class="card-header font-italic">
              by Luis Meneses
            </div>
            <div class="card-body">           
              <div class="card-text text-left"><%= simple_format(@article.description) %></div>
              <%= link_to 'Edit', edit_article_path(@article.id), class: "btn btn-outline-primary"  %>
              <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?"} , class: "btn btn-outline-danger" %>
            </div>
            <div class="card-footer text-muted">
              <small>
                Created <%= time_ago_in_words(@article.created_at)%> days ago, edited <%= time_ago_in_words(@article.updated_at) %> days ago
              </small>
            </div>
          </div>
        </div>
      </div>
  </div>
  <%= link_to 'Create new article', new_article_path %>


