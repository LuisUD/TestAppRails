<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%=render 'shared/errors'%>
      <%= form_with(model: @article, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
        <div class="form-group row">
          <%= f.label :title , class: "col-2 col-form-label text-ligth"%>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "title"%>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description , class: "col-2 col-form-label text-ligth"%>
          <div class="col-10">
            <%= f.text_area :description, class: "form-control shadow rounded", placeholder: "description"%>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-ligth btn-lg" %>
        </div>
      <%end%>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="mb-3">
      <%= link_to '[Cancel and return]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>
